#
# this playbook takes the files from the repo and puts them into the correct place in the servers 
#
#
#
---
- hosts: localhost
  vars:
    http_port: 80
    max_clients: 200
  remote_user: root
  tasks:
  - name: install files from repo into runtime location
    copy: 
    src=/home/pi/kplex-monitor/repo/{{ item.src }} 
    dest=/home/pi/kplex-monitor/run/{{ item.dest }}
    #owner=pi 
    #group: pi
    #mode: 0644
    with_items:
      - { src: 'heading_calc.py',  dest: 'heading_calc.py'  }
      - { src: 'SevenSeg.py',      dest: 'SevenSeg.py'      }
      - { src: 'kplex_monitor.py', dest: 'kplex_monitor.py' }

